{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}